# Love Diary Agent Service - Environment Variables

# Authentication (shared secret between backend and agent service)
AGENT_SERVICE_SECRET=your-secret-key-here-change-in-production

# Blockchain Configuration
BASE_RPC_URL=https://sepolia.base.org
CHARACTER_NFT_ADDRESS=0x...  # Deployed CharacterNFT contract address

# AI/LLM Configuration
# LLM Provider: "asi" or "openai"
LLM_PROVIDER=asi

# ASI-1 Mini Configuration (required if LLM_PROVIDER=asi)
ASI_MINI_API_KEY=your-asi-mini-api-key
ASI_MINI_API_URL=https://api.asi1mini.com/v1

# OpenAI Configuration (required if LLM_PROVIDER=openai)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Database (PostgreSQL via Supabase)
DATABASE_URL=postgresql://postgres:password@db.xxx.supabase.co:5432/postgres

# Agent Configuration (optional, has defaults)
AGENT_IDLE_TIMEOUT=3600  # 1 hour in seconds
AGENT_HIBERNATION_CHECK_INTERVAL=300  # 5 minutes
MAX_ACTIVE_AGENTS=50

# Service Configuration (optional)
PORT=8000
DEBUG=false
ALLOWED_ORIGINS=*  # Configure properly in production
